{
  "compilerOptions": {
    "outDir": "./public/",
    "baseUrl": "src/ts",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
}